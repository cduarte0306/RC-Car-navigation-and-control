{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug RC Car (Jetson - Remote)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/rc-car-nav",
      "miDebuggerServerAddress": "192.168.1.10:2345",
      "miDebuggerPath": "/usr/bin/gdb-multiarch",
      "MIMode": "gdb",
      "targetArchitecture": "arm64",                 // explicit target arch
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Run GDB Server (Jetson - Remote)",
      "stopAtEntry": true,
      "setupCommands": [
        { "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true }
      ],
      "sourceFileMap": {                              // map remote paths to local
        "/home/root": "${workspaceFolder}"
      },
      "externalConsole": false
    }
  ]
}
